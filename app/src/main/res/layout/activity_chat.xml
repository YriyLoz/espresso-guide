<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.ChatActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">
            <com.atiurin.espressoguide.CircleImageView
                    android:id="@+id/toolbar_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/chandler"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/transparent"/>
            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingLeft="16dp"
                    />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/message_panel"
            android:layout_alignParentTop="true"/>


    <RelativeLayout android:id="@+id/message_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

        <View style="@style/Divider"
              android:background="@color/colorPrimaryDark"
              android:layout_alignTop="@id/message_text"/>
        <ImageView
                android:id="@+id/attach_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="6dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_menu_share"
        />

        <EditText
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48sp"
                android:maxHeight="110sp"
                android:maxLines="4"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/attach_button"
                android:layout_toStartOf="@+id/send_button"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:hint="Enter text"/>

        <ImageView
                android:id="@+id/send_button"
                android:layout_height="wrap_content"
                android:layout_width="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="6dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_menu_send"/>
    </RelativeLayout>

</RelativeLayout>